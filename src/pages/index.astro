const teams = await response.json()
---

<Layout title='Welcome to Astro.'>
	<div class='container m-auto'>
		<header class='flex'>
			{
				teams.map(({ id, image, name }) => (
					<a href={`/team/${id}`}>
						<img class='aspect-square w-12' src={image} alt={`Escudo del equipo ${name}`} />
					</a>
				))
			}
		</header>
		<nav>
			<ul>
				<li>
					<a href="/teams">Equipos</a>
				</li>
				<li>
					<a href="/schedule">Calendario</a>
				</li>
				<li>
